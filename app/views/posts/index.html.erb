<% if admin_signed_in? %>
	<div id="admin_nav">
		Signed in, my liege.
		<%= link_to "sign out", destroy_admin_session_path, :method => :delete %>
		<%= link_to "New Post", new_post_path %>
	</div>
<% end%>

<% @posts.each do |post| %>
	<div id="post_<%= post.id %>">
		<div id="post_title_top_left">
			<h1><%= post.first_title_line %></h1>
		</div>

		<div id="post_title_top_right"></div>
		<div id="float_clear"></div>
		<div id="post_title_bottom_left"></div>

		<div id="post_title_bottom_right">
			<h2><%= post.last_title_line %></h2>
		</div>

		<div id="float_clear"></div>

		<div id="post_tags">
			<p class="date">
				APR
			</p>
			<p class="date">
				07
			</p>
			<p class="date">
				1986
			</p>
		</div>

		<div id="post_body">
			<p class="body">
				<%= post.body %>
			</p>	
		<% if admin_signed_in? %>
			<%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
		<% end %>
		</div>
		
	</div>
<% end %>

